<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap
	PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="intro">
	<typeAlias alias="Intro" type="com.ytcares.bean.IntroDataBean"/>
	
	<select id="selectIntro" parameterClass="string" resultClass="Intro">
		SELECT
			  NO
			, KIND
			, CONTENT
			, IMAGE
		FROM
			INTRO
		WHERE KIND = #kind#
	</select>
	
	<update id="updateIntro" parameterClass="Intro">
		UPDATE INTRO
		SET
			  CONTENT	= #content#
			, IMAGE		= #image#
		WHERE
			KIND		= #kind#
	</update>
</sqlMap>